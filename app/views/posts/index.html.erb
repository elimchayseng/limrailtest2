<p id="notice"><%= notice %></p>

<h1>Guest Book!</h1>

<% if user_signed_in? %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to image_tag(post.image.variant(resize: "100x100")), post %><td>
          <br>
        <td><%= post.description %></td> <br>
        <%= post.user.name if post.user %><br>

        <% if post.user == current_user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td> 
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td><br> 
        <% end %>

      </tr><br>
    <% end %>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<% else %> 

    <% @posts.each do |post| %>
      <tr>
         <td><%= link_to image_tag(post.image.variant(resize: "100x100")), post %><td><br>
        <td><%= post.description %></td><br>
        <%= post.user.name if post.user %><br>
      </tr>
    <% end %>


<% end %>
